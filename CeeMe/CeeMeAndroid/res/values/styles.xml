<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="welcome_header_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#8325A8</item>
        <item name="android:fontFamily">sans-serif</item>
        <!--<item name="android:typeface">monospace</item>-->
    </style>

    <style name="ActionBar" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">
            @android:style/Widget.Holo.ActionBar
        </item>
    </style>

    <style name="CeeMeMessageItemFrame">
        <item name="android:background">@drawable/blue_buttonshape</item>
    </style>

    <style name="CeeMeMessageOutgoingItemFrame">
        <item name="android:background">@drawable/darkgreen_buttonshape</item>
    </style>

    <style name="CeeMeMessageItemFrameText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CeeMeMessageItemFrameHeaderText">
        <item name="android:textColor">#E1F2F7</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="GradientButtonParent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="GreenGradientButton" parent="GradientButtonParent">
        <item name="android:background">@drawable/green_gradient_button</item>
    </style>

    <style name="RedGradientButton" parent="GradientButtonParent">
        <item name="android:background">@drawable/red_gradient_button</item>
    </style>

</resources>