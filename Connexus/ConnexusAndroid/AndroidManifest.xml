<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="connexus.android"
          android:versionCode="1"
          android:versionName="1.0-SNAPSHOT">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />

    <application
            android:name=".ConnexusApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity"
                  android:theme="@style/ActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".BrowseStreamsActivity"
                android:theme="@style/ActionBar"
                android:label="@string/browse_streams_activity_name"
                android:parentActivityName=".WelcomeActivity"
                >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".WelcomeActivity"/>
        </activity>
        <activity
                android:name=".ImagePagerActivity"
                android:theme="@style/ActionBar"
                android:label="@string/ac_name_image_pager"
                android:parentActivityName=".ViewStreamsActivity"
                />
        <activity
                android:name=".ViewStreamActivity"
                android:theme="@style/ActionBar"
                android:label="@string/view_stream_activity_name"
                android:parentActivityName=".BrowseStreamsActivity"
                >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".BrowseStreamsActivity"/>
        </activity>
        <activity
                android:name=".UploadActivity"
                android:theme="@style/ActionBar"
                android:label="@string/upload_activity_name"
                android:parentActivityName=".ViewStreamsActivity"
                >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".ViewStreamsActivity"/>
        </activity>
        <activity
                android:name=".CameraActivity"
                android:theme="@style/ActionBar"
                android:label="@string/camera_activity_name">
                <!--android:parentActivityName=".UploadActivity"-->
                <!-->-->
            <!--<meta-data-->
                    <!--android:name="android.support.PARENT_ACTIVITY"-->
                    <!--android:value=".UploadActivity"/>-->
        </activity>

    </application>

</manifest>