<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="connexus.android"
          android:versionCode="1"
          android:versionName="1.0-SNAPSHOT">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>

    <application
            android:name=".ConnexusApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".BrowseStreamsActivity"
                android:theme="@style/ActionBar"
                android:label="@string/browse_streams_activity_name"
                android:parentActivityName=".WelcomeActivity"
                >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".WelcomeActivity"/>
        </activity>
        <activity
                android:name=".ImagePagerActivity"
                android:label="@string/ac_name_image_pager" />
        <activity
                android:name=".ViewStreamActivity"
                android:theme="@style/ActionBar"
                android:label="@string/view_stream_activity_name"
                android:parentActivityName=".BrowseStreamsActivity"
                >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".BrowseStreamsActivity"/>
        </activity>

    </application>

</manifest>